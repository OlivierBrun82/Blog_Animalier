{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre: </th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Post: </th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Post crée par: </th>
                <td>{{ post.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <img src="{{ asset('upload/images/' ~ post.img) }}" alt="image">
            </tr>
            <tr>
                <th>CreatedAt</th>
                <th>Crée le: </th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le: </th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}">Retourner a la liste des posts</a>

    <a href="{{ path('app_post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
