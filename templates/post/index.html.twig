{% extends 'base.html.twig' %}

{% block title %}ANIBLOG{% endblock %}

{% block body %}
    <h1>Post index</h1>
    <div><a href="{{ path('app_post_new') }}">Créer un nouveau post</a></div>
    <div><a href="{{ path('app_type_new') }}">Créer un nouveau type</a></div>

    <table class="table">
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>Titre</th>
                <th>Post</th>
                <th>Crée le</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.name }}</td>
                <td>{{ post.title }}.</td>
                <td>{{ post.content }}.</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d') : '' }}.</td>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_post_show', {'id': post.id}) }}">Show</a>
                    <a href="{{ path('app_post_edit', {'id': post.id}) }}">Edit</a>
                    <a href="{{ path('app_comment_new') }}">Nouveau commentaire</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
